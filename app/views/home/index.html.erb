<% if user_signed_in? %>
  <h2>user: <%= current_user.email %></h2>
  <% if current_user.customer %>
    <p>Customer data:</p>
    <div><%= current_user.customer.data %></div>
  <% end %>
  <br>
  <%= link_to 'list connections', connections_path %>
  <br>
  <%= link_to 'sign out user', destroy_user_session_path, data: { turbo_method: "delete" } %>
<% else %>
  <%= link_to 'Register user', new_user_registration_path %>
  <br>
  <%= link_to 'sign in user', new_user_session_path %>
<% end %>
